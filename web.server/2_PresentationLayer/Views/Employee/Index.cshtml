@using BusinessLogicLayer.DTO
@model IEnumerable<EmployeeDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Сотрудники</h2>

<p>
    <button type="button" onclick="location.href='@Url.Action("Create", "Employee")'" class="btn btn-info add-new"><i style="font-weight:bold; font-size:16px">+</i> Новый</button>
</p>
<table class="table table-bordered">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>E-mail</th>
        <th title="Кол-во проектов">Проекты (сотрудник)</th>
        <th title="Кол-во проектов">Проекты (рабочий)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeInProjects.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecutorInProjects.Count)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>